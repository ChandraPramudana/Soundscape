<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:dropDownSelector">@drawable/spinner_item_selector</item>
        <item name="android:popupBackground">@drawable/spinner_popup_background</item>
        <item name="android:dropDownWidth">match_parent</item>
    </style>

    <!-- Style untuk item spinner -->
    <style name="SpinnerItemStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/spinner_item_selector</item>
    </style>

    <!-- Style untuk selected item spinner -->
    <style name="SpinnerSelectedItemStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
    </style>
</resources>